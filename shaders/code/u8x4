float4 u8x4_unpack(uint input)
{
    float4 output;
    output.x =  input        & 0x000000ff;
    output.y = (input >>  8) & 0x000000ff;
    output.z = (input >> 16) & 0x000000ff;
    output.w =  input >> 24;
    return output / 255;
}

uint u8x4_pack(float4 input)
{
	uint4 value = uint4(saturate(input) * 255 + 0.5);
    return  (value.x)        |
           ((value.y) <<  8) |
           ((value.z) << 16) |
           ((value.w) << 24) ;
}